@model List<Store_Manager.Models.Product>

@{
    ViewBag.Title = "Show All Product";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<body>
    <h1>@ViewData["Heading"]</h1>

    <table border="1" class="table">
        <tr>
            <td>Id</td>
            <td>Name</td>
            <td>Price</td>
        </tr>

        @foreach (var p in Model)
        {
        <tr>
            <td>@p.Id</td>
            <td>@p.ProductName</td>
            <td>@p.Price</td>
        </tr>
        }
    </table>
</body>
