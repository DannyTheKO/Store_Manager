@model List<Store_Manager.Models.Product>

@{
    ViewBag.Title = "Show List Product";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>@ViewBag.Title</h1>

<table border="1" class="table">
    <tr>
        <td>ID</td>
        <td>Name</td>
        <td>Price</td>
        <td>Action</td>
    </tr>

    @foreach(var p in Model)
    {
    <tr>
        <td>@p.Id</td>
        <td>@p.ProductName</td>
        <td>@p.Price</td>
        <td>Detail</td>
    </tr>
    }

</table>
